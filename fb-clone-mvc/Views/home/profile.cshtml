@{
    Layout = "~/Views/Shared/Shared_nav_linked_files.cshtml";
}



<div id="user-info-container" class="card">
    <div class=" container">
        <div id="user-info" class="profile-info flex ">
            <!-- user info -->
            <div id="user-details" class="flex">
                <!-- profile img -->
                <img class="rounded-circle" src="~/images/demo-profile-img.jpg" />
               
                <!-- user name&Friends count -->
                <div class="user-info">
                    <h2 class="user-name">Abdelrahman Mostafa</h2>
                    <p id="friends"><span id="friends-count">500</span> Friend</p>
                </div>
            </div>
            <!-- edit profilr btn -->
            <div id="edit-btn" class="go-edit">
                <a class="btn btn-dark" href="/home/edit_profile">Edit profile</a>
            </div>
        </div>
    </div>
</div>

<!-- ----------------------add post section---------------- -->
<div class="container add-post ">
    <div class="card my-3">

        <form action="" class=" grid">

            <img class="rounded-circle" src="~/images/demo-profile-img.jpg" />



            <input type="text" id="post-text" name="post-text" placeholder="What's on your mind" required>
            <input type="file" id="file" name="img" accept="image/*">
            <label for="file" class="upload-btn">
                <i class="upload-icon material-icons"
                   style="font-size:36px">add_to_photos</i>
            </label>
            <input class="btn btn-outline-primary" type="submit" value="Post">

        </form>
        <hr>
    </div>
</div>

<!-- ----------------------news feed section---------------- -->
<div class="news-feed">
    <div class="container">
        <!-- post card -->
        <div id="user-post" class="post card my-3">
            <div class="user-info flex">
                <div class="flex user-post-info">
                    <img class="rounded-circle" src="~/images/demo-profile-img.jpg" />
                    <h5 id="user-name" class="user-name">Abdelrahman Mostafa</h5>
                </div>
                <div class="edit-post-privacy">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#exampleModal">
                        edit
                    </button>
                </div>
            </div>
            <hr>
            <!-- post text -->
            <p id="post-text" style="font-size: 20px;" class="my-2">
                Lorem ipsum, dolor sit amet consectetur
                adipisicing elit.
                Harum,asperiores!
            </p>
            <!-- post main img -->
            <img id="post-img" src="~/images/meme.png" />

            <!-- likes count -->
            <p class="likes-count my-2"><span id="likes-count">5</span> like this post</p>
            <hr>
            <!-- like and comment btns -->
            <div class="post-interact flex">
                <!-- like btn -->
                <div id="like-btn" class="like">
                    <button class="btn btn-primary" href="">
                        <i class="fa fa-thumbs-up" style="font-size:30px"></i> like
                    </button>
                </div>
                <!-- comment btn -->
                <div id="dislike-btn" class="like">
                    <button class="btn btn-primary">
                        <i class="fa fa-thumbs-down"
                           style="font-size:29px"></i>
                        Dislike
                    </button>
                </div>
            </div>

            <hr>
            <div id="add-comment" class="add-comment">
                <form action="">
                    <img id="user-img" class="rounded-circle" style="width: 50px;" src="~/images/demo-profile-img.jpg" />

                    <input id="comment-text-input" style="border-radius: 40px;width: 70%;" type="text"
                           placeholder="Add Comment">
                    <input id="submit-comment" class="btn btn-outline-primary" type="submit" value="Post">

                </form>
            </div>
            <br>
            <div class="view-comments">
                <div id="comment" class="flex comment">
                    <img class="rounded-circle" src="~/images/fb-profilr-placeholder.jpeg" />
                    <div class="comment-body">
                        <p id="comment-text">
                            Lorem ipsum dolor sit amet consectetur adipisicing elit. Similique expedita
                            enim,
                            suscipit facere et eveniet excepturi voluptatibus porro. Inventore, rem.
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- ------------------------------------------- -->


</div>

<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Post Privacy</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="">
                    <input type="radio" id="html" name="Privacy" value="private">
                    <label for="html">private</label><br>
                    <input type="radio" id="public" name="Privacy" value="Public">
                    <label for="public">Public</label><br><br>
                    <input class="btn btn-primary" type="submit" value="Submit">
                </form>
                <hr>
                <button class="btn btn-outline-danger">Delete Post</button>
            </div>
        </div>
    </div>
</div>
